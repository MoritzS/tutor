= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :course_id
    = f.number_field :course_id
  .actions
    = f.submit 'Save'
