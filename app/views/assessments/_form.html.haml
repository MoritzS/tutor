= form_for @assessment do |f|
  - if @assessment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assessment.errors.count, "error")} prohibited this assessment from being saved:"
      %ul
        - @assessment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student_id
    = f.number_field :student_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :remark
    = f.text_field :remark
  .field
    = f.label :week
    = f.datetime_select :week
  .actions
    = f.submit 'Save'
