!!! 5
%html
	%head
		%meta(charset="utf-8")
		%meta(name="viewport" content="width=device-width, initial-scale=1.0")
		%title Debut2
		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true, :debug => true
		= javascript_include_tag "application", "data-turbolinks-track" => true, :debug => true
		= csrf_meta_tags
		- if current_user && current_user.admin
			:css
				body { margin-top: 10px; }
		:css
			.container { max-width: 9999px; }

	%body
		- if current_user && current_user.admin
			%div.navbar-wrapper
				%div.container
					%div.navbar.navbar-inverse.navbar-static-top
						%div.container
							%div.navbar-header
								%button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
									%span.icon-bar
									%span.icon-bar
									%span.icon-bar
								%a.navbar-brand(href="#") Debut2
							%div.navbar-collapse.collapse
								%ul.nav.navbar-nav
									%li.active
										%a(href="/tutorial/") Tutorial
									- if user_signed_in? and current_user.admin
										%li
											%a(href="/load/") Load
										%li
											%a(href="/users/") Users
										%li
											%a(href="/courses/") Courses
										%li
											%a(href="/weeks/") Weeks
										%li
											%a(href="/groups/") Groups
										%li
											%a(href="/students/") Students
										%li
											%a(href="/about/") About

								- if not user_signed_in?
									%form.navbar-form.navbar-right(action="/users/sign_in" method="post")
										- # = link_to image_tag("buttons/facebook.png"), omniauth_authorize_path(:user, "facebook")
										%input(type="checkbox" name="remember_me" checked style="display:none")
										%div.form-group
											%input.input-sm.form-control(name="email" type="email" placeholder="Email Address" id="username")
										%div.form-group
											%input.input-sm.form-control(name="password" type="password" placeholder="Password")
										%button.btn-sm.btn.btn-submit(type="submit") Login
								- else
									.navbar-form.navbar-right
										.pull-right(style="margin-left: 10px")
											= button_to 'Logout', destroy_user_session_path, { :method => :get, :class => "btn btn-xs btn-default navbar-btn"}
										.pull-right.navbar-btn
											- if current_user.admin
												= switch_user_select 
									

		%div.container
			%div.col-md-12
				- if notice
					%p.notice= notice
				- if alert
					%p.alert= alert

				= yield


			- if current_user && !current_user.admin and session["original_user"] && session["original_user"].admin
				= switch_user_select 
